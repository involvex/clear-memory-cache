{
	"name": "clear-memory-cache",
	"description": "A Cli tool to clear windows caches, standby memory.",
	"author": "involvex",
	"version": "0.0.1",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/involvex/clear-memory-cache",
		"type": "git"
	},
	"keywords": [
		"cli",
		"clear-memory",
		"clear-standby-memory",
		"clear-ram",
		"cache-clear"
	],
	"funding": "https://github.com/sponsors/involvex",
	"sponsor": {
		"url": "https://github.com/sponsors/involvex"
	},
	"bin": {
		"clear-memory-cache": "dist/cli.js",
		"cmc": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "bun run src/cli.tsx",
		"format": "prettier --write .",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"typecheck": "tsc --noEmit",
		"prebuild": "bun run format && bun run lint:fix && bun run typecheck",
		"test": "prettier --check . && xo && ava",
		"start": "bun run dist/cli.js",
		"clean": "rimraf dist",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@types/json-js": "^1.1.2",
		"@types/jsonfile": "^6.1.4",
		"@types/package-json": "^5.0.1",
		"ink": "^6.7.0",
		"ink-link": "^5.0.0",
		"meow": "^14.0.0",
		"react": "^19.2.4"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@sindresorhus/tsconfig": "^8.1.0",
		"@types/react": "^19.2.14",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.4.1",
		"chalk": "^5.6.2",
		"conventional-changelog-cli": "^5.0.0",
		"eslint": "^10.0.0",
		"eslint-config-xo-react": "^0.29.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"ink-testing-library": "^4.0.0",
		"jiti": "^2.6.1",
		"prettier": "^3.8.1",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-packagejson": "^3.0.0",
		"prettier-plugin-sort-imports": "^1.8.11",
		"rimraf": "^6.1.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"xo": "^1.2.3"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"overrides": {
		"@eslint/plugin-kit": "^0.3.4"
	},
	"prettier": "@vdemedes/prettier-config",
	"trustedDependencies": [
		"unrs-resolver"
	]
}
